                                android:id="@+id/imp2"
                                style="@style/conjugation_table_content_style"/>
                        <TextView
                                android:text="@string/conjugation_activity_verb_group3_imp"
                                android:id="@+id/imp3"
                                style="@style/conjugation_table_content_style"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                              android:gravity="center" android:id="@+id/verb_table_causative">
                        <TextView
                                android:text="@string/conjugation_activity_verb_title_cau"
                                style="@style/conjugation_table_title_style"
                                android:id="@+id/cau0"/>
                        <TextView
                                android:text="@string/conjugation_activity_verb_group1_cau"
                                android:id="@+id/cau1"
                                style="@style/conjugation_table_content_style"/>
                        <TextView
                                android:text="@string/conjugation_activity_verb_group2_cau"
                                android:id="@+id/cau2"
                                style="@style/conjugation_table_content_style"/>
                        <TextView
                                android:text="@string/conjugation_activity_verb_group3_cau"
                                android:id="@+id/cau3"
                                style="@style/conjugation_table_content_style"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                              android:gravity="center" android:id="@+id/verb_table_passive">
                        <TextView
                                android:text="@string/conjugation_activity_verb_title_pas"
                                style="@style/conjugation_table_title_style"
                                android:id="@+id/pas0"/>
                        <TextView
                                android:text="@string/conjugation_activity_verb_group1_pas"
                                android:id="@+id/pas1"
                                style="@style/conjugation_table_content_style"/>
                        <TextView
                                android:text="@string/conjugation_activity_verb_group2_pas"
                                android:id="@+id/pas2"
                                style="@style/conjugation_table_content_style"/>
                        <TextView
                                android:text="@string/conjugation_activity_verb_group3_pas"
                                android:id="@+id/pas3"
                                style="@style/conjugation_table_content_style"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                              android:gravity="center" android:id="@+id/verb_table_causative_passive">
                        <TextView
                                android:text="@string/conjugation_activity_verb_title_caupas"
                                style="@style/conjugation_table_title_style"
                                android:id="@+id/caupas0"/>
                        <TextView
                                android:text="@string/conjugation_activity_verb_group1_caupas"
                                android:id="@+id/caupas1"
                                style="@style/conjugation_table_content_style"/>
                        <TextView
                                android:text="@string/conjugation_activity_verb_group2_caupas"
                                android:id="@+id/caupas2"
                                style="@style/conjugation_table_content_style"/>
                        <TextView
                                android:text="@string/conjugation_activity_verb_group3_caupas"
                                android:id="@+id/caupas3"
                                style="@style/conjugation_table_content_style"/>
                    </TableRow>
                </TableLayout>
            </HorizontalScrollView>
            <TextView
                    android:text="@string/conjugation_activity_adj_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/adj_title" android:textAlignment="center"
                    android:textColor="@color/titleText" android:textSize="24sp"
                    android:fontFamily="@font/noto_sans_cjk_black"/>
            <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSecondary"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
            />
            <TextView
                android:text="@string/conjugation_activity_noun_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/noun_title" android:textAlignment="center"
                android:textColor="@color/titleText" android:textSize="24sp"
                android:fontFamily="@font/noto_sans_cjk_black"/>
            <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSecondary"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
            />
        </LinearLayout>
</ScrollView>