<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/colorPrimary">


    <TextView
            android:text="@string/main_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/main_activity_title"
            android:layout_marginTop="96dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textColor="@color/titleText"
            android:fontFamily="@font/noto_serif_cjk_black" android:textAlignment="textEnd"
            android:textSize="36sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.7">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:scrollbars="none">
            <com.google.android.material.button.MaterialButton
                    android:text="@string/grammar_list_activity_btn_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/grammar_list_activity_btn"
                    app:backgroundTint="@color/colorSecondary"
                    android:insetLeft="4dp" android:fontFamily="@font/noto_sans_cjk_black" android:insetRight="4dp"
                    app:cornerRadius="16dp"/>

            <com.google.android.material.button.MaterialButton
                    android:text="@string/vocab_list_activity_btn_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vocab_list_activity_btn"
                    app:backgroundTint="@color/colorSecondary"
                    android:insetLeft="4dp" android:fontFamily="@font/noto_sans_cjk_black" android:insetRight="4dp"
                    app:cornerRadius="16dp"/>

            <com.google.android.material.button.MaterialButton
                    android:text="@string/grammar_practice_activity_btn_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/grammar_practice_activity_btn"
                    app:backgroundTint="@color/colorSecondary"
                    android:insetLeft="4dp" android:fontFamily="@font/noto_sans_cjk_black" android:insetRight="4dp"
                    app:cornerRadius="16dp"/>

            <com.google.android.material.button.MaterialButton
                    android:text="@string/vocab_practice_activity_btn_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vocab_practice_activity_btn"
                    app:backgroundTint="@color/colorSecondary"
                    android:insetLeft="4dp" android:fontFamily="@font/noto_sans_cjk_black" android:insetRight="4dp"
                    app:cornerRadius="16dp"/>

        </LinearLayout>
    </HorizontalScrollView>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_settings_24dp"
            android:id="@+id/setting_btn"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/title_activity_settings" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" android:backgroundTint="@color/colorPrimary"/>
</androidx.constraintlayout.widget.ConstraintLayout>