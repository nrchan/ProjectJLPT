<androidx.preference.PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            app:title="@string/custom_header">

        <EditTextPreference
                app:key="name"
                app:title="@string/name_title"
        />

        <ListPreference
                app:key="address"
                app:title="@string/address_title"
                app:summary="@string/address_summary"
                app:entries="@array/address_name"
                app:entryValues="@array/address_name"
        />

    </PreferenceCategory>

    <PreferenceCategory
            app:title="@string/download_header">

        <Preference
                app:key="isGrammarDownloaded"
                app:title="@string/grammar_downloaded_title"
                app:summary="@string/grammar_downloaded_summary"
                app:icon="@drawable/ic_refresh_24dp"
        />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>
